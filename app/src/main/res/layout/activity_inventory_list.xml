<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray1" />

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <LinearLayout
            android:id="@+id/llContinuous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:clickable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <!--Button
                android:id="@+id/btnFilter"
                android:layout_width="74dp"
                android:layout_height="37dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:background="@drawable/button_bg"
                android:text="@string/uhf_title_filter"
                android:textColor="@color/white"
                android:textSize="11sp" /-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:text="@string/title_inventory_status"
                android:textSize="@dimen/text_size_19"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llPlusInventoryServer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageButton
                    android:id="@+id/btnInventory"
                    android:layout_width="40dp"
                    android:layout_height="37dp"
                    android:background="@color/full_transparent"
                    android:contentDescription="@string/btn_add_inventory"
                    android:focusableInTouchMode="false"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:scaleType="fitCenter"
                    android:soundEffectsEnabled="true"
                    android:src="@drawable/blue_plus_button"
                    tools:src="@drawable/blue_plus_button" />
            </LinearLayout>
            <!--Button
                android:id="@+id/btnInventory"
                android:layout_width="74dp"
                android:layout_height="37dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="50dp"
                android:background="@drawable/button_bg"
                android:text="@string/btSync"
                android:textColor="@color/white"
                android:textSize="11sp" /-->
            <!--  -->

        </LinearLayout>
    </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray1"
            android:orientation="horizontal" />

    <ListView
        android:id="@+id/lstData"
        android:layout_width="match_parent"
        android:layout_height="520dp"/>
</LinearLayout>
