<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray1" />

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:id="@+id/llContinuous"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_inventaryofServer"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginRight="30dp" />
                <LinearLayout
                    android:id="@+id/llPlusInventoryServer"
                    android:layout_gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <!--Button
                        android:id="@+id/btn_syncInventoryServer"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:text="@string/btn_syncronousInventary"
                        android:layout_marginEnd="10dp"
                        android:textSize="10sp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/button_bg"
                        android:textStyle="bold"
                        android:textColor="@color/white1"
                        android:layout_marginRight="10dp" /-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@color/gray1"
            android:orientation="horizontal" />
    <RelativeLayout
        android:id="@+id/layout_server_inventory_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/img_btnSincronizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_sincronizar"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/txt_inventoryLoad"
            android:layout_below="@+id/img_btnSincronizar"
            android:gravity="center"
            android:textSize="@dimen/text_size_21"
            android:layout_margin="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/img_no_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delete"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/txt_no_data_load"
            android:layout_below="@+id/img_no_data"
            android:gravity="center"
            android:textSize="@dimen/text_size_21"
            android:layout_margin="10dp"/>
    </RelativeLayout>
        <ListView
            android:id="@+id/lv_server_inventories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollingCache="true"
            android:smoothScrollbar="true" />
    </LinearLayout>
