<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventory">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_titleInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <ListView
            android:id="@+id/lv_inventory"
            android:layout_width="match_parent"
            android:layout_height="529dp"
            android:background="#00CCACAC"
            android:choiceMode="singleChoice"
            android:divider="@color/black"
            android:dividerHeight="@dimen/list_padding"
            android:entries="@array/item_inventory"
            android:listSelector="@drawable/button_bg_down"
            tools:listfooter="@layout/activity_inventory" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>