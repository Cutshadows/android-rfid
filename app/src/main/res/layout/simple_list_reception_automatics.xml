<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_date_reception"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:freezesText="true"
                android:textColor="#ffffff"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/tv_date_reception_count"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="false"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_date_reception"
                android:textSize="12sp"
                android:textStyle="bold"
                android:freezesText="true"
                android:textColor="#ffffff"
                android:layout_toRightOf="@+id/tv_date_reception"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_toEndOf="@+id/tv_date_reception"
                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/tv_reception_title"
                android:layout_alignParentBottom="true"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_below="@+id/tv_date_reception_count"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:freezesText="true"
                android:padding="3sp"
                android:textColor="#ffffff"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_alignParentLeft="true" />
            <ImageButton
                android:id="@+id/btn_reception_comentary"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/tv_reception_title"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="false"
                android:background="@drawable/blue_plus_button"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"/>
            <ImageButton
                android:id="@+id/btn_global_reception_automatic"
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/drag_effect_inventories"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/item_sync"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_sync_effect" />

            <ImageView
                android:id="@+id/item_read_tag"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:src="@drawable/img_inventory_effect" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>